<%- include('../layouts/adminheader'); -%>


    <div class="container main-title">
        <h2 class="page-title">Add a product</h2>
        <a href="/admin/products" class="btn btn-info mt-2">Back to all products</a>
    </div>
    <br><br>


    <div class="container table-style">
        <form method="post" action="/admin/products/add-product" enctype="multipart/form-data">

            <div class="form-group">
                <label for="">Title</label>
                <input type="text" class="form-control" name="title" placeholder="Title">
            </div>

            <div class="form-group">
                <label for="">Description</label>
                <textarea name="desc" class="form-control" cols="30" rows="10" placeholder="Description"></textarea>
            </div>

            <div class="form-group">
                <label for="category">Category</label>
                <select name="category" id="category">
                    <% categories.forEach(function(cat){ %>
                        <option value="<%=cat.title %>">

                            <%=cat.title %>
                        </option>

                        <% }); %>
                </select>


            </div>

            <div class="form-group">
                <label for="">Price</label>
                <input type="text" class="form-control" name="price" placeholder="Price">
            </div>

            <div class="form-group">
                <label for="image">Image</label>
                <input type="file" class="form-control" name="image" id="img" multiple>
            </div>

            <button class="btn  mt-2 button-style">Submit</button>
        </form>
    </div>

    <%- include("../layouts/adminfooter"); -%>