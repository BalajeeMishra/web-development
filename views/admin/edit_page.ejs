<%- include("../layouts/adminheader"); -%>

    <div class="container  main-title">
        <h1 class="page-title">Edit-Pages</h1>
        <a href="/admin/pages" class="btn btn-info mt-2">Back to all pages</a>
    </div>
    <br><br>


    <div class="container table-style">

        <form action="/admin/pages/edit-page/<%=page._id %>?_method=PUT" method="post">

            <div class="form-group">
                <label for="">Title</label>
                <input class="form-control" type="text" name="title" value="<%=page.title %> " placeholder="Title">
            </div>
            <div class="form-group">
                <label for="">Slug</label>
                <input type="text" class="form-control" name="slug" value="<%=page.slug%>" placeholder="Slug">
            </div>
            <div class="form-group">
                <label for="">Content</label>
                <textarea name="content" class="form-control" value="<%=page.content%>" cols="30" rows="10"
                    placeholder="Content"></textarea>

            </div>

            <button class="btn btn-info mt-2 button-style">submit</button>
        </form>
    </div>




    <%- include("../layouts/adminfooter"); -%>